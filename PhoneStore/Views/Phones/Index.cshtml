@model List<Phone>

@{
    ViewBag.Title = "Phones";
    Layout = "_Layout";
}

<h2>Phones</h2>
<a asp-action="Add">Add Phone</a>


<div class="table-section">
@if (!Model.Any())
{
    <p>No phones available</p>
}
else
{
    <table>
        <tr>
            <th>Id</th><th>Name</th><th>Company</th><th>Price</th>
        </tr>
        @foreach(var phone in Model)
        {
            <tr>
                <td>@phone.Id</td>
                <td>@phone.Name</td>
                <td>@phone.Company</td>
                <td>@phone.Price</td>
                <td>
                    <a asp-action="DownloadFile" asp-controller="Phones" asp-route-phoneName="@phone.Name">Download Info</a>
                </td>
                <td>
                    <a asp-action="RedirectToManufacturer" asp-controller="Phones" asp-route-url="@phone.ManufacturerUrl">Visit Site</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Phones" asp-route-id="@phone.Id">Edit</a>
                </td>
                <td>
                    <a asp-action="Create" asp-controller="Orders" asp-route-phoneId="@phone.Id">Order</a>
                </td>

            </tr>
        }
    </table>
}
</div>