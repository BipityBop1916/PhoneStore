@model Phone

@{
    ViewBag.Title = "Add Phone";
    Layout = "_Layout";
}

<h2>Add Phone</h2>
<div class="row">
    <div class="phone_add_form col-md-6">
        <form asp-action="Add" method="post">
            <div class="form_row">
                <label for="">
                    Name
                    <input asp-for="Name" type="text">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Company
                    <input asp-for="Company" type="text">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Price
                    <input asp-for="Price" type="text">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Manufacturer Url
                    <input asp-for="ManufacturerUrl" type="text">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Description
                    <input asp-for="Description" type="text">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Image Link
                    <input asp-for="PhotoUrl" type="text">
                </label>
            </div>
            <button type="submit">Add</button>
        </form>
    </div>
</div>
