@model Phone

@{
    ViewBag.Title = "Edit Phone";
    Layout = "_Layout";
}

<h2>Edit Phone</h2>
<div class="row">
    <div class="phone_edit_form col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-row">
                <label>Name</label>
                <input asp-for="Name" />
            </div>
            <div class="form-row">
                <label>Brand</label>
                <input asp-for="Company" />
            </div>
            <div class="form-row">
                <label>Price</label>
                <input asp-for="Price" />
            </div>
            <div class="form-row">
                <label>Manufacturer Url</label>
                <input asp-for="ManufacturerUrl" />
            </div>
            <button type="submit">Save</button>
        </form>
    </div>
</div>