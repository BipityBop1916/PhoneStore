@model List<PhoneStore.Models.Order>

@{
    ViewBag.Title = "Orders";
    Layout = "_Layout";
}

<h2>Orders</h2>

<div class="table-section">
    @if (!Model.Any())
    {
        <p>No orders have been placed yet.</p>
    }
    else
    {
        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Customer Name</th>
                <th>Address</th>
                <th>Contact Phone</th>
                <th>Phone Ordered</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.CustomerName</td>
                    <td>@order.Address</td>
                    <td>@order.ContactPhone</td>
                    <td>@order.Phone?.Name</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
